{% extends 'base.html.twig' %}

{% block title 'Tous les masters'%}

{% block body %}
<div class="jumbotron text-center">
	<div class="container">
		<h1>Voir tous les masters</h1>
		{{ form_start(form) }}
		<div class="form-row align-items-end">
			<div class="col">
				{{ form_row (form.name) }}
			</div>
			<div class="col">
				{{ form_row (form.magictype) }}
			</div>
			<div class="col">
				<div class="form-group">
					<button type="submit" class="btn btn-primary">Rechercher</button>
				</div>
			</div>
		</div>
		{{ form_end(form) }}
	</div>
</div>

<div class="container mt-4">
	<div class="row">
		{% for master in masters %}
			<div class="col-md-4">
				{% include "master/_master.html.twig" %}
			</div>
		{% endfor %}
	</div>
</div>

{% endblock %}
