{% extends "base.html.twig" %}

{% block body %}
    <div class="container md-4">
        <h1>Choisir le servant pour le master {{master.name}}</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Classe</th>
                    <th>Noble phantasme</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for servant in servants %}
                    <tr>
                        <td>{{servant.name}}</td>
                        <td>{{servant.classType}}</td>
                        <td>{{servant.noblephantasme}}</td>
                        <td><a href="{{path('admin.master.servantOK', {idservant:servant.id, idmaster:master.id})}}" class="btn btn-success">Invoquer</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}